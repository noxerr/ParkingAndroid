<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:orientation="vertical"
    android:gravity="center_horizontal"
	android:background="#D3F2FD">
	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:id="@+id/modoCao">
   	    <TextView
   	        android:id="@+id/bototoBlock"
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent"
   	        android:text="Salir"
			android:textColor="#D6000000"
			android:background="#BBDEFB"
   	        android:layout_gravity="center_vertical"
   	        android:gravity="center_vertical|center_horizontal"
   	        android:textAppearance="?android:attr/textAppearanceLarge"
   	        android:padding="10dp"
			android:textSize="25sp"/>
   	</LinearLayout>

   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:id="@+id/mo">
   	    <TextView
   	        android:id="@+id/textMatricula"
   	        android:layout_width="0dp"
			android:layout_weight="1"
   	        android:layout_height="match_parent"
   	        android:text="Matricula: "
			android:textColor="#D6000000"
   	        android:layout_gravity="center_vertical"
   	        android:gravity="center_vertical|center_horizontal"
   	        android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="19sp"
			android:paddingLeft="15dp" />
		<EditText
			android:id="@+id/editMatriculaSalir"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"
			android:hint="0000XHL"
			android:textColorHint="#31464646"
			android:textColor="#A6000000"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical|left"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="18sp"
			android:paddingLeft="15dp" />
   	</LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp">
		<Button
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="Cancelar"
			android:textColor="#D6000000"
			android:id="@+id/bcancel2"
			android:textSize="17sp"
            android:layout_marginRight="2dp"
            android:background="@anim/custom_button"/>
		<Button
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="Salir"
			android:textColor="#D6000000"
			android:id="@+id/salir"
			android:textSize="17sp"
            android:layout_marginLeft="2dp"
			android:background="@anim/custom_button"/>
	</LinearLayout>
</LinearLayout>