<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:orientation="vertical"
    android:gravity="center_horizontal"
	android:background="#D3F2FD">
	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal">
   	    <TextView
   	        android:id="@+id/bototoBlock"
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent"
   	        android:text="Deshacer"
			android:textColor="#D6000000"
			android:background="#BBDEFB"
   	        android:layout_gravity="center_vertical"
   	        android:gravity="center_vertical|center_horizontal"
   	        android:textAppearance="?android:attr/textAppearanceLarge"
   	        android:padding="10dp"
			android:textSize="25sp"/>
   	</LinearLayout>
	<TextView
		android:layout_marginLeft="15dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="15dp"
		android:id="@+id/textDeshacer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text=""
        android:textColor="#A6000000"
		android:layout_gravity="center_vertical"
		android:gravity="center_vertical"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="18sp" />
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp">
		<Button
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="Cancelar"
			android:textColor="#D6000000"
			android:id="@+id/cancelDeshacer"
			android:textSize="16sp"
            android:layout_marginRight="2dp"
            android:background="@anim/custom_button"/>
		<Button
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="Deshacer"
			android:textColor="#D6000000"
			android:id="@+id/deshacerDialog"
			android:textSize="16sp"
            android:layout_marginLeft="2dp"
			android:background="@anim/custom_button"/>
	</LinearLayout>
</LinearLayout>