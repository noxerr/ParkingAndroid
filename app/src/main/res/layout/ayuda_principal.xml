<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:orientation="vertical"
    android:gravity="center_horizontal"
	android:background="#D3F2FD">
	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
        android:layout_weight="0">
   	    <TextView
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent"
   	        android:text="Ayuda"
			android:textColor="#D6000000"
			android:background="#BBDEFB"
   	        android:layout_gravity="center_vertical"
   	        android:gravity="center_vertical|center_horizontal"
   	        android:textAppearance="?android:attr/textAppearanceLarge"
   	        android:padding="10dp"
			android:textSize="25sp"/>
   	</LinearLayout>

   	<ScrollView
   	    android:layout_width="match_parent"
   	    android:layout_height="0dp"
        android:layout_weight="1"
   	    android:orientation="horizontal">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(La sección de ayuda es Scroll, para ver más, arrastra el texto hacia arriba)"
                android:textColor="#E6000000"
                android:textStyle="italic"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking"
                android:textColor="#E6000000"
                android:textStyle="bold"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En esta aplicacion podremos manejar cualquier tipo de accion relacionada con nuestro parking. La imagen del parking NO es interactiva, es únicamente visual, cualquier accion ha de realizarse mediante los botones adecuados. IMPORTANTE: El formato horario utilizado durante toda la aplicacion es; Año - Mes - Dia - Hora - Minuto. Ademas, para quitar cualquier popup basta con clicar fuera de el.\nEn esta pantalla encontraremos los siguientes botones:"
                android:textColor="#E6000000"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp" />


            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestiones"
                android:textColor="#E6000000"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al pulsar este boton veremos una serie de opciones, cuya utilidad podremos ver en la ayuda de esa pestaña."
                android:textColor="#E6000000"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deshacer"
                android:textColor="#E6000000"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="17sp" />
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Con este boton podremos deshacer la ultima entrada/salida de un vehiculo."
                android:textColor="#E6000000"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp" />


        </LinearLayout>
   	</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.65"
            android:layout_height="match_parent"
            android:text="Creado por Daniel Roca"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <Button
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="0.35"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/volverAyudaPrincipal"
            android:text="Volver"
            android:textSize="17sp"
            android:background="@anim/custom_button"/>
    </LinearLayout>

</LinearLayout>