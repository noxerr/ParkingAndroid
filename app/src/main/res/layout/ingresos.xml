<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:orientation="vertical"
    android:gravity="center_horizontal"
	android:background="#D3F2FD">
	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal">
   	    <TextView
   	        android:id="@+id/botonIn"
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent"
   	        android:text="Ingresos"
			android:textColor="#D6000000"
			android:background="#BBDEFB"
   	        android:layout_gravity="center_vertical"
   	        android:gravity="center_vertical|center_horizontal"
   	        android:textAppearance="?android:attr/textAppearanceLarge"
   	        android:padding="10dp"
			android:textSize="25sp"/>
   	</LinearLayout>

   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal">
   	    <TextView
   	        android:id="@+id/textMatricula"
   	        android:layout_width="0dp"
			android:layout_weight="1.2"
   	        android:layout_height="match_parent"
   	        android:text="Ingresos SOLO de hoy: "
			android:textColor="#D6000000"
   	        android:layout_gravity="center_vertical"
   	        android:gravity="center_vertical|center_horizontal"
   	        android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="19sp"
			android:paddingLeft="12dp" />
		<CheckBox
            android:layout_marginLeft="20dp"
            android:layout_weight="0.8"
			android:layout_width="wrap_content"
			android:id="@+id/checkToday"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:checked="false"
			 />
   	</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rolones">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Desde: "
            android:textColor="#D6000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="15dp" />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/ano"
            android:spinnerMode="dialog">
        </Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/mes"
            android:spinnerMode="dialog">
        </Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/dia"
            android:spinnerMode="dialog">
        </Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/hora"
            android:spinnerMode="dialog">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rolones2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hasta: "
            android:textColor="#D6000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="15dp" />
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/ano2"
            android:spinnerMode="dialog">
        </Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/mes2"
            android:spinnerMode="dialog">
        </Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/dia2"
            android:spinnerMode="dialog">
        </Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/hora2"
            android:spinnerMode="dialog">
        </Spinner>
    </LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp">
		<Button
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="Volver"
			android:textColor="#D6000000"
			android:id="@+id/volverIngresos"
			android:textSize="19sp"
            android:layout_marginRight="2dp"
            android:background="@anim/custom_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Consultar"
            android:textColor="#D6000000"
            android:id="@+id/consulta"
            android:textSize="19sp"
            android:layout_marginLeft="2dp"
            android:background="@anim/custom_button"/>
	</LinearLayout>
</LinearLayout>